<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0-windows10.0.18362.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x64</Platforms>
		<UseWinUI>true</UseWinUI>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<WindowsPackageType>None</WindowsPackageType>
		<IncludeGetResolvedSDKReferences>true</IncludeGetResolvedSDKReferences>
		<ApplicationIcon>icon.ico</ApplicationIcon>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
		<Configurations>Debug;Release;Publish</Configurations>
		<Version>1.0.23.3</Version>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <DefineConstants>DISABLE_XAML_GENERATED_MAIN;MICA;PREVIEW</DefineConstants>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;MICA;PREVIEW</DefineConstants>
		<Optimize>True</Optimize>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|x64'">
		<DefineConstants>DISABLE_XAML_GENERATED_MAIN;MICA</DefineConstants>
		<Optimize>True</Optimize>
		<DebugType>embedded</DebugType>
	</PropertyGroup>
	<ItemGroup>
	  <Content Remove="Assets\Fonts\FontAwesomeRegular6.otf" />
	</ItemGroup>
	<ItemGroup>
	  <None Remove="ApplyUpdate.deps.json" />
	  <None Remove="ApplyUpdate.dll" />
	  <None Remove="ApplyUpdate.exe" />
	  <None Remove="ApplyUpdate.runtimeconfig.json" />
	  <None Remove="Microsoft.WindowsAppRuntime.Bootstrap.dll" />
	  <None Remove="XAMLs\MainApp\DisconnectedPage.xaml" />
	</ItemGroup>

    <ItemGroup>
        <Content Include="ApplyUpdate.deps.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="ApplyUpdate.dll">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="ApplyUpdate.exe">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="ApplyUpdate.runtimeconfig.json">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="icon.ico" />
        <Content Include="Microsoft.WindowsAppRuntime.Bootstrap.dll">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Aiursoft.HSharp" Version="2.2.2" />
        <PackageReference Include="CommunityToolkit.WinUI.UI.Controls" Version="7.1.2" />
        <PackageReference Include="ksemenenko.ColorThief" Version="1.1.1.4" />
        <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.25131-preview" />
        <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.0" />
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta3.22114.1" />
        <PackageReference Include="System.Drawing.Common" Version="7.0.0-preview.4.22229.4" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Hi3HelperCore\Hi3HelperCore.csproj" />
    </ItemGroup>

	<Target Name="_RemoveFrameworkReferences" BeforeTargets="_ConvertItems;_CalculateInputsForGenerateCurrentProjectAppxManifest">
		<ItemGroup>
			<FrameworkSdkReference Remove="@(FrameworkSdkReference)" Condition="'%(FrameworkSdkReference.SDKName)' == 'Microsoft.WindowsAppRuntime.1.1-preview3'" />
		</ItemGroup>
	</Target>

    <ItemGroup>
        <Content Update="Assets\BG\AiHappy.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="Assets\BG\default.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="Assets\BG\PaimonSleep.png">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="Assets\Fonts\FontAwesomeBrand6.otf">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="Assets\ironmaiden_logo_256.png">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Deps\" />
    </ItemGroup>

    <ItemGroup>
      <Page Update="XAMLs\MainApp\DisconnectedPage.xaml">
        <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      </Page>
    </ItemGroup>
</Project>
